{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Pliny Framework Configuration Schema",
  "type": "object",
  "required": ["task"],
  "properties": {
    "task": {
      "type": "object",
      "required": ["name", "domain"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Task name"
        },
        "description": {
          "type": "string",
          "description": "Brief description of the task"
        },
        "domain": {
          "type": "string",
          "enum": ["web_development", "murata_mhc", "python_data", "general_reasoning", "research_analysis", "security_testing"],
          "description": "Domain module to use"
        }
      }
    },
    "execution": {
      "type": "object",
      "properties": {
        "framework": {
          "type": "string",
          "enum": ["rise", "care", "harvest"],
          "default": "rise"
        },
        "parallel": {
          "type": "boolean",
          "default": false
        },
        "max_retries": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "default": 3
        },
        "checkpoint_frequency": {
          "type": "string",
          "enum": ["phase", "agent", "manual"],
          "default": "phase"
        }
      }
    },
    "agents": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "phase"],
        "properties": {
          "name": {
            "type": "string"
          },
          "phase": {
            "type": "string"
          },
          "parallel": {
            "type": "boolean",
            "default": false
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "prerequisites": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "mcp_servers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["command", "args"],
        "properties": {
          "command": {
            "type": "string"
          },
          "args": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "output": {
      "type": "object",
      "properties": {
        "deliverables_dir": {
          "type": "string",
          "default": "./deliverables"
        },
        "audit_logs_dir": {
          "type": "string",
          "default": "./audit-logs"
        },
        "checkpoints_dir": {
          "type": "string",
          "default": "./checkpoints"
        }
      }
    },
    "error_handling": {
      "type": "object",
      "properties": {
        "retry_strategies": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "max_retries": {
                "type": "integer",
                "minimum": 0,
                "maximum": 10
              },
              "backoff": {
                "type": "string",
                "enum": ["exponential", "linear", "fixed"]
              },
              "initial_delay": {
                "type": "integer",
                "minimum": 0
              }
            }
          }
        }
      }
    }
  }
}

